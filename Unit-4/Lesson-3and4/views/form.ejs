<%- include('./partials/header') %>
    <h2>
        <%= title %>
    </h2>

    <form method="POST" action="<%= action %>">
        <div>
            <!-- Need name as well as id for data to be received by Express -->
            <label class="form-label">Title:
                <input class="form-control" type="text" name="title" id="title" />
            </label>
        </div>
        <div>
            <label class="form-label">ISBN:
                <input class="form-control" type="isbn" name="isbn" id="isbn" /></label>
        </div>
        <div>
            <label class="form-label">Publisher:
                <input class="form-control" type="text" name="publisher" id="publisher" />
            </label>
        </div>
        <div>
            <label class="form-label">Inventory:
                <input class="form-control" type="number" name="inventory" id="inventory" /></label>
        </div>
        <div>
            <label class="form-label">Units sold:
                <input class="form-control" type="number" name="unitsSold" id="unitsSold" /></label>
        </div>
        <div>
            <label class="form-label">Tags (comma separated):
                <input class="form-control" type="text" name="tags" id="tags" /></label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>

    </form>
    <%- include('./partials/footer') %>